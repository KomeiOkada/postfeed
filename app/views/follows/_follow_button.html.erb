<% if current_user.following?(richsitesummary) %>
  <%= form_with(model: current_user.follows.find_by(richsitesummary_id: richsitesummary.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :richsitesummary_id, richsitesummary.id %>
    <%= f.submit 'Unfollow', class: 'btn btn-danger btn-block' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.follows.build, local: true) do |f| %>
    <%= hidden_field_tag :richsitesummary_id, richsitesummary.id %>
    <%= f.submit 'Follow', class: 'btn btn-primary btn-block' %>
  <% end %>
<% end %>
