<ul class="list-unstyled">
  <% articles.each do |article| %>
    <li class="media mb-12">
      <div class="media-body">
        <div>
          <%= link_to article.richsitesummary.title, richsitesummary_path(article.richsitesummary) %> <span class="text-muted">posted at <%= article.created_at %></span>
        </div>
        <div>
          <p><%= link_to article.title, article.url %></p>
          <p><%= article.summary %></p>
          <p><%= article.published %></p>
          <%= link_to 'Detail', article, class: 'btn btn-secondary btn-sm' %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate articles %>
</ul>